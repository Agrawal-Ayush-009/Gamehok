<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#001208"
    tools:context=".HomeFragment">

    <View
        android:id="@+id/topToolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="10dp"
        android:background="#001208"
        />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="@id/topToolbar"
        app:layout_constraintStart_toStartOf="@id/topToolbar"
        app:layout_constraintBottom_toBottomOf="@id/topToolbar"
        android:layout_marginLeft="20dp"
        android:src="@drawable/profile"
        android:elevation="10dp"
        />

    <ImageView
        android:id="@+id/notificationIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/notification"
        android:foregroundGravity="center"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="@id/topToolbar"
        app:layout_constraintTop_toTopOf="@id/topToolbar"
        app:layout_constraintBottom_toBottomOf="@id/topToolbar"
        android:layout_marginEnd="15dp"
        />

    <LinearLayout
        android:id="@+id/eventFeeLL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/notificationIcon"
        android:layout_marginEnd="20dp"
        android:background="@drawable/coin_button_outline"
        android:elevation="10dp"
        android:paddingVertical="4dp"
        android:paddingEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@id/topToolbar">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/coin"
            android:layout_gravity="center"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="5dp"
            />

        <TextView
            android:id="@+id/entryFee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:text="2456"
            android:textColor="@color/white"
            android:layout_gravity="start"
            android:textSize="12sp" />
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topToolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mainLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#001208">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewpager2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginHorizontal="7dp"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/slideDotLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/viewpager2" />

            <TextView
                android:id="@+id/playByGamesHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/inter_semibold"
                android:text="Play Tournament By Games"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/slideDotLL" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/inter_medium"
                android:text="View All"
                android:textColor="#01B752"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/slideDotLL" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/playByGamesRV"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="7dp"
                android:layout_marginTop="20dp"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                android:isScrollContainer="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/playByGamesHeader"
                app:spanCount="3"
                tools:itemCount="6"
                tools:listitem="@layout/play_by_game_rv_item" />
            <View
                android:id="@+id/spacer1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@id/playByGamesRV"
                android:layout_marginTop="20dp"
                android:background="#806A6C7B"
                android:elevation="5dp"
                android:layout_marginHorizontal="15dp"
                />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/createGameCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/spacer1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:strokeColor="#FFC39B"
                app:cardCornerRadius="8dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#FFC39B"
                android:layout_marginHorizontal="15dp"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/createGameHead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/inter_semibold"
                        android:text="Create your own tournament"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/createGameDesc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/inter_medium"
                        android:text="Host and manage your own tournaments and play with your friends"
                        android:textColor="#4A4A4A"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/createGameImg"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/createGameHead" />

                    <ImageView
                        android:id="@+id/createGameImg"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginEnd="-20dp"
                        android:layout_marginVertical="15dp"
                        android:src="@drawable/remote"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/createGameDesc"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/competeBattleHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/inter_semibold"
                android:text="Compete in Battles"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/createGameCard" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/inter_medium"
                android:text="View All"
                android:textColor="#01B752"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/createGameCard" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/competeBattleRV"
                android:layout_width="match_parent"
                android:elevation="10dp"
                app:layout_constraintTop_toBottomOf="@id/competeBattleHeader"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:listitem="@layout/compete_in_battle_rv_item"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_centerInParent="true"/>

            <TextView
                android:id="@+id/followPeopleHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/inter_semibold"
                android:text="People to follow"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/competeBattleRV" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/inter_medium"
                android:text="View More"
                android:textColor="#01B752"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/competeBattleRV" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/followPeopleRV"
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@id/followPeopleHeader"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="7dp"
                tools:listitem="@layout/follow_people_item"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_centerInParent="true"/>







        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>